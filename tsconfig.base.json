{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@shared-ui/*": [
                "packages/shared-ui/src/*"
            ],
            "@shared-lib/*": [
                "packages/shared-lib/src/*"
            ]
        }
    }
}