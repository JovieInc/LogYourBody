{
  "name": "logyourbody-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter apps/web dev",
    "build": "turbo run build",
    "start": "pnpm --filter apps/web start",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:ci": "turbo run test",
    "web": "pnpm --filter apps/web dev",
    "ios": "cd apps/ios && open LogYourBody.xcodeproj",
    "prepush": "turbo run lint typecheck test --filter='...[origin/main]'",
    "prepare": "husky install",
    "check": "pnpm --filter apps/web check",
    "format": "prettier --write .",
    "lint:swift": "cd apps/ios && swiftlint lint --strict"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "vitest": "^4.0.14"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "lint-staged": {
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "bash -c 'if [[ \"$0\" != *\"__tests__\"* ]] && [[ \"$0\" != *\".test.\"* ]] && [[ \"$0\" != *\".spec.\"* ]]; then eslint --fix \"$0\"; fi'",
      "prettier --write"
    ],
    "packages/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ],
    "apps/ios/**/*.{swift}": [
      "cd apps/ios && swiftlint"
    ]
  }
}
